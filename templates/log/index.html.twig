{% extends 'base.html.twig' %}
{% block title %}Logs{% endblock %}
{% block body %}
    <div class="table-responsive" style="zoom: 0.6%">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Time</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.id }}</td>
                    <td>{{ log.createdAt | date('d/m/Y')  }}</td>
                    <td>{{ log.createdAt | date('H:i:s')  }}</td>
                    <td>{{ log.details }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
